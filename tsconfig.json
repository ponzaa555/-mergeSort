{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "outDir": "./dist/src",
    "resolveJsonModule": true,
    "allowJs": true ,
    "allowArbitraryExtensions": true,   
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
